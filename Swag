df['Director'] = (
    df['Director Role']                       # start with the role
      .astype(str).str.strip()                # normalize blanks / trim
      .replace({'Reinvestment Director': 'IRM Assigned',
                'Home Office': 'Other',
                '': 'Other'})                 # map special cases
      .fillna('Other')                        # NaN â†’ Other
)
