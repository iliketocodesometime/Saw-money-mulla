def join_dataframes(df1, df2, cols_df1, cols_df2):
    # Merge the two DataFrames on the specified columns
    merged_df = pd.merge(df1, df2, left_on=cols_df1, right_on=cols_df2, how='left')
    
    # Drop duplicates based on the df1 index to keep only the first match
    merged_df = merged_df.drop_duplicates(subset=cols_df1)
    
    return merged_df
