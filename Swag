'=== (l3) Slide 4: Education Events Table ===
Dim wsEduEvents As Worksheet
On Error Resume Next
Set wsEduEvents = ThisWorkbook.Sheets("Education Events")
On Error GoTo 0

If Not wsEduEvents Is Nothing Then
    Dim colDirEdu As Long
    colDirEdu = FindColumnIndex(wsEduEvents, "Director")
    
    If colDirEdu > 0 Then
        Dim lastRowEdu As Long
        lastRowEdu = wsEduEvents.Cells(wsEduEvents.Rows.Count, colDirEdu).End(xlUp).Row
        
        Dim totalEduCount As Long: totalEduCount = 0
        Dim directorEduCount As Long: directorEduCount = 0

        For iRow = 2 To lastRowEdu
            Dim dirVal As String
            dirVal = Trim(wsEduEvents.Cells(iRow, colDirEdu).Value)
            If IsDirectorValid(dirVal) Then
                totalEduCount = totalEduCount + 1
                If dirVal = director Then
                    directorEduCount = directorEduCount + 1
                End If
            End If
        Next iRow

        Dim shpEdu As PowerPoint.Shape
        On Error Resume Next
        Set shpEdu = pres.Slides(4).Shapes("TableEducation")
        On Error GoTo 0

        If Not shpEdu Is Nothing Then
            With shpEdu.Table
                .Cell(1, 2).Shape.TextFrame.TextRange.Text = "Education Events"
                .Cell(2, 2).Shape.TextFrame.TextRange.Text = CStr(totalEduCount)
                .Cell(3, 2).Shape.TextFrame.TextRange.Text = CStr(directorEduCount)
                If totalEduCount > 0 Then
                    .Cell(4, 2).Shape.TextFrame.TextRange.Text = Format(directorEduCount / totalEduCount, "0.0%")
                Else
                    .Cell(4, 2).Shape.TextFrame.TextRange.Text = "N/A"
                End If
            End With
        End If
    End If
End If
