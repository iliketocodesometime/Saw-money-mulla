def join_dfs_on_columns(df1, df2, cols1, cols2):
    matched_df = pd.DataFrame()
    df2_copy = df2.copy()
    
    for _, row1 in df1.iterrows():
        for _, row2 in df2_copy.iterrows():
            if all(row1[col1] == row2[col2] for col1, col2 in zip(cols1, cols2)):
                matched_df = matched_df.append({**row1, **row2}, ignore_index=True)
                df2_copy = df2_copy.drop(row2.name)
                break

    return matched_df
