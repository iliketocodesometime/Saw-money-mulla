def join_dataframes(df1, df2, cols_df1, cols_df2):
    # Renaming columns in df2 to match df1
    df2_renamed = df2.rename(columns=dict(zip(cols_df2, cols_df1)))
    
    # Merging dataframes on the specified columns
    result = pd.merge(df1, df2_renamed, on=cols_df1, how='left')
    
    # Dropping duplicates based on the keys from df1
    result = result.drop_duplicates(subset=cols_df1)
    
    return result
