def left_join_multiple_columns(df1, df2, cols1, cols2):
    # Create a column to mark the index for merging purposes
    df1['index'] = df1.index
    
    # Perform a left join for each pair of columns and concatenate the results
    merged_dfs = []
    for col1, col2 in zip(cols1, cols2):
        merged_df = pd.merge(df1, df2, left_on=col1, right_on=col2, how='left', suffixes=('', f'_{col2}'))
        merged_dfs.append(merged_df)
    
    # Concatenate all merged dataframes
    merged_df = pd.concat(merged_dfs, ignore_index=True)
    
    # Drop duplicates based on the original index and keep the first match
    merged_df = merged_df.drop_duplicates(subset='index', keep='first')
    
    # Drop the temporary index column
    merged_df = merged_df.drop(columns=['index'])
    
    return merged_df
