Option Explicit

Sub UpdateChartsForDirectors()

    Dim wb As Workbook: Set wb = ThisWorkbook
    Dim ws As Worksheet: Set ws = wb.Sheets("New Plan Sales")  ' <-- Adjust if needed
    
    ' Identify last row in column A
    Dim lastRow As Long
    lastRow = ws.Cells(ws.Rows.Count, 1).End(xlUp).Row
    
    ' Range for all data except header row (A2:E...)
    Dim rngDataBody As Range
    Set rngDataBody = ws.Range("A2:E" & lastRow)
    
    ' Build a dictionary of unique Directors from column B
    Dim dictDir As Object: Set dictDir = CreateObject("Scripting.Dictionary")
    Dim cell As Range
    For Each cell In ws.Range("B2:B" & lastRow)
        If Not IsEmpty(cell.Value) Then
            If Not dictDir.Exists(cell.Value) Then dictDir.Add cell.Value, True
        End If
    Next cell
    
    ' Get Think-Cell Add-In
    Dim tcXlAddIn As Object
    Set tcXlAddIn = Application.COMAddIns("thinkcell.addin").Object
    
    ' Create a PowerPoint instance (late binding)
    Dim ppApp As Object
    Set ppApp = CreateObject("PowerPoint.Application")
    
    ' Template path, save folder, Think-Cell chart name
    Const templatePath      As String = "C:\Samples\UpdateChart\template.pptx"
    Const saveFolder        As String = "C:\Samples\UpdateChart\"
    Const thinkCellChartName As String = "Chart1"
    
    Dim dirName As Variant, rngFilter As Range
    Dim pres As Object  ' Late binding for PowerPoint.Presentation
    
    ' Loop through each Director
    For Each dirName In dictDir.Keys
        
        ' Remove any existing AutoFilter; apply new filter on column B => Field:=2
        ws.AutoFilterMode = False
        rngDataBody.AutoFilter Field:=2, Criteria1:=dirName
        
        ' Collect visible rows
        On Error Resume Next
        Set rngFilter = rngDataBody.SpecialCells(xlCellTypeVisible)
        On Error GoTo 0
        
        If Not rngFilter Is Nothing Then
            
            ' Remove old TempChartData sheet if it exists
            On Error Resume Next
            Application.DisplayAlerts = False
            If Not wb.Worksheets("TempChartData") Is Nothing Then
                wb.Worksheets("TempChartData").Delete
            End If
            Application.DisplayAlerts = True
            On Error GoTo 0
            
            ' Create a fresh TempChartData sheet
            Dim wsTemp As Worksheet
            Set wsTemp = wb.Worksheets.Add
            wsTemp.Name = "TempChartData"
            
            ' Dictionary to count deals by Stage (column E => 5th column)
            Dim dictStage As Object
            Set dictStage = CreateObject("Scripting.Dictionary")
            
            Dim r As Range, stg As Variant
            For Each r In rngFilter.Columns(5).Cells
                If Not IsEmpty(r.Value) Then
                    stg = r.Value
                    If dictStage.Exists(stg) Then
                        dictStage(stg) = dictStage(stg) + 1
                    Else
                        dictStage.Add stg, 1
                    End If
                End If
            Next r
            
            ' If we have any stages for this Director...
            If dictStage.Count > 0 Then
                
                ' We want Stage names in row 1, starting at column B (col index = 2)
                ' And counts in row 3, also starting at column B
                Dim i As Long: i = 2   ' Start writing at column B
                Dim key As Variant
                For Each key In dictStage.Keys
                    ' Stage name in row 1
                    wsTemp.Cells(1, i).Value = key
                    ' Stage count in row 3
                    wsTemp.Cells(3, i).Value = dictStage(key)
                    i = i + 1
                Next key
                
                ' Build final chart range from row 1 to row 3, columns B..(i-1)
                Dim rngChart As Range
                Set rngChart = wsTemp.Range( _
                                wsTemp.Cells(1, 2), _
                                wsTemp.Cells(3, i - 1))
                
                ' Open the template read-only and untitled so the original isn't changed
                Set pres = ppApp.Presentations.Open( _
                    FileName:=templatePath, _
                    ReadOnly:=msoTrue, _
                    Untitled:=msoTrue)
                
                ' Update the Think-Cell chart
                tcXlAddIn.UpdateChart pres, thinkCellChartName, rngChart, False
                
                ' Save & close as a new file
                pres.SaveAs saveFolder & dirName & "_updated.pptx"
                pres.Close
            End If
        End If
        
        ' Turn off filter before next iteration
        ws.AutoFilterMode = False
        Set rngFilter = Nothing
    Next dirName
    
    ' Quit PowerPoint
    ppApp.Quit
    
    MsgBox "All Director-specific presentations have been created.", vbInformation

End Sub
