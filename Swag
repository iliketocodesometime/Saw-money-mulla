import requests
import pandas as pd
from io import StringIO

# Define the URL for the NASDAQ stock screener CSV download
url = "https://www.nasdaq.com/screening/companies-by-industry.aspx?exchange=NASDAQ&render=download"

# Send a request to get the CSV content
response = requests.get(url)

# Check if the request was successful
if response.status_code == 200:
    # Load the content into a DataFrame
    csv_content = StringIO(response.text)
    df = pd.read_csv(csv_content)

    # Display the first few rows of the data
    df.head()
else:
    print("Failed to download CSV. Status code:", response.status_code)
